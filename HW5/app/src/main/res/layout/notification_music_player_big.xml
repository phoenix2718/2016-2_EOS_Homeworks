<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/noti_big_imageview_album_cover"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/album_cover"
            android:maxWidth="64dp"
            android:maxHeight="64dp" />
        <TextView
            android:id="@+id/noti_big_textview_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:visibility="visible"
            android:text="123123"/>
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">
        <ImageView
            android:id="@+id/noti_imageview_big_play"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:src="@drawable/play"/>
        <ImageView
            android:id="@+id/noti_big_imageview_back"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:adjustViewBounds="true"
            android:src="@drawable/back"/>
        <ImageView
            android:id="@+id/noti_big_imageview_pause"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:adjustViewBounds="true"
            android:src="@drawable/pause"/>
        <ImageView
            android:id="@+id/noti_big_imageview_stop"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:adjustViewBounds="true"
            android:src="@drawable/stop"/>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/noti_big_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:indeterminate="false" />
</LinearLayout>
