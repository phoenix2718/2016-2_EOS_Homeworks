<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.phoen.hw5.MainActivity">

    <TextView
        android:id="@+id/activitiy_textview_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:text="@string/no_file_playing" />
    <LinearLayout
        android:layout_below="@id/activitiy_textview_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <ImageView
            android:id="@+id/activitiy_imageview_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/play"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:onClick="onClick"
            android:focusable="true"/>
        <ImageView
            android:id="@+id/activitiy_imageview_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/back"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:onClick="onClick"/>
        <ImageView
            android:id="@+id/activitiy_imageview_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/pause"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:onClick="onClick"/>
        <ImageView
            android:id="@+id/activitiy_imageview_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/stop"
            android:adjustViewBounds="true"
            android:maxHeight="100dp"
            android:onClick="onClick"/>
    </LinearLayout>
</RelativeLayout>
